{
  "name": "clash-of-legends",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "predev": "sh -c 'lsof -ti tcp:3080 | xargs -r kill -9 || true'",
    "dev": "CHOKIDAR_USEPOLLING=1 WATCHPACK_POLLING=true HOSTNAME=127.0.0.1 node -r ./scripts/os-network-fallback.cjs ./node_modules/next/dist/bin/next dev -p 3080 -H 127.0.0.1",
    "dev:3080": "npm run dev",
    "build": "next build",
    "prestart": "sh -c 'lsof -ti tcp:3080 | xargs -r kill -9 || true'",
    "start": "HOSTNAME=127.0.0.1 node -r ./scripts/os-network-fallback.cjs ./node_modules/next/dist/bin/next start -p 3080 -H 127.0.0.1",
    "lint": "eslint"
  },
  "dependencies": {
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "next": "15.5.2"
  },
  "devDependencies": {
    "typescript": "^5",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@tailwindcss/postcss": "^4",
    "tailwindcss": "^4",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "@eslint/eslintrc": "^3"
  }
}
